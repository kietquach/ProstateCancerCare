<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.ecs193.prostatecancercare.TempPassword"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:id="@+id/newPasswordText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/newPasswordEdit"
        android:layout_below="@+id/newPasswordText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-type new password"
        android:id="@+id/verifyPasswordText"
        android:layout_below="@+id/newPasswordEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/verifyPasswordEdit"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/verifyPasswordText"
        android:layout_alignLeft="@+id/newPasswordEdit"
        android:layout_alignStart="@+id/newPasswordEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/submitNewPassword"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/verifyPasswordEdit"
        android:layout_alignLeft="@+id/newPasswordText"
        android:layout_alignStart="@+id/newPasswordText" />
</RelativeLayout>
