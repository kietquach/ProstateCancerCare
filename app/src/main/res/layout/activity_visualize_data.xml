<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.ecs193.prostatecancercare.VisualizeData"
    android:background="@drawable/visualization">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISUALIZE SCORES"
        android:id="@+id/psaButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PSA Information"
        android:id="@+id/psaInfo"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/psaButton"
        android:layout_alignEnd="@+id/psaButton"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PSA Density:"
        android:id="@+id/psaDensityText"
        android:layout_alignLeft="@id/psaInfo"
        android:layout_alignStart="@id/psaInfo"
        android:layout_below="@+id/psaInfo"
        android:layout_alignRight="@+id/psaButton"
        android:layout_alignEnd="@+id/psaButton"
        android:layout_marginTop="44dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PSA Doubling Time:"
        android:id="@+id/psaDoubleTime"
        android:layout_below="@+id/psaDensityText"
        android:layout_alignLeft="@+id/psaDensityText"
        android:layout_alignStart="@+id/psaDensityText"
        android:layout_marginTop="45dp"
        android:textColor="#FFFFFFFF" />
</RelativeLayout>
